# App
ENV=production
PORT=10000
ALLOWED_ORIGINS=*

# Database (Render External Database URL, e.g. postgres://user:pass@host:5432/dbname)
DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@HOST:5432/DBNAME

# OTC / Business config
OTC_DEFAULT_TOKEN_SYMBOL=NENO
OTC_DEFAULT_PRICE_EUR=5000
OTC_DEFAULT_AVAILABLE_AMOUNT=1000000
REFERRER_DOMAIN=neonoble.eu

# ChangeNOW (Partner)
CHANGENOW_BASE_URL=https://api.changenow.io/v2
CHANGENOW_API_KEY=your_changenow_api_key
CHANGENOW_REF_ID=your_partner_ref_id
CHANGENOW_PUBLIC_SELL_URL=https://changenow.io/sell

# NOWPayments (Fiat payout / off-ramp partner)
NOWPAYMENTS_BASE_URL=https://api.nowpayments.io/v1
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret  # for webhook signature validation

# Webhooks (your public https URLs on Render)
WEBHOOK_BASE=https://changenow-offramp-pro.onrender.com
